<p class="h1 text-center bg-warning" >Creer votre compte</p>

<div class="container w-50 d-flex justify-content-center" >
  <%= form_with model: @user do |f| %>
  <%= f.label "Prénom" %>
  <%= f.text_field :first_name %>
  <br /> <br />
  <%= f.label 'Nom' %>
  <%= f.text_field :last_name %>
  <br /> <br />
  <%= f.label 'Description' %>
  <%= f.text_field :description %>
  <br /> <br />
  <%= f.label 'Email' %>
  <%= f.text_field :email %>
  <br /> <br />
  <%= f.label 'Age' %>
  <%= f.text_field :age %>
  <br /> <br />
  <%= f.label 'Ville' %>
  <%= f.collection_select :city_id, City.order(:name), :id, :name %>
  <br /> <br />

  
  <%= f.label 'Mot de passe' %>
  <%= f.password_field :password %>
  <br /> <br />
  <%= f.submit "Créer utilisateur" %>
  <% end %>
  <br /> <br />