<p class="h1 text-center">Page des villes</p>
<p class="text-center"><%= @city.name%></p>

<% @gossip.each_slice(3) do |group|%>
  <div class="container">
    <div class="row">
      <% group.each do |i|%>
        <div class="col">
          <div class="card">
            <h5 class="card-header">Potin n° <%= i.id%></h5>
            <div class="card-body">
              <h5 class="card-title"><%= i.title%></h5>
              <p class="card-text">Écrit par : <%= @user.find(i.user_id).first_name%></p>
              <a href="<%= gossip_path(i.id)%>" class="btn btn-primary">Voir le potin</a>
            </div>
          </div>
        </div>
      <% end%>
    </div>
  </div>
  <br>
<% end%>
